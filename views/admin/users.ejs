<section>
  <div class="container" style="margin-top:50px;">
  <div class="table-responsive">
  <table class="table">
   
        <!-- <div class="row mt-4">
            <a href="" class="btn btn-success">Add Product</a>
        </div> -->

               
          <table id="myTable" class="table mt-5">
          <!-- <input type="text" class="mt-5 ml-auto" id="myInput" onkeyup="myFunction()" placeholder="Search for names.."> -->
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Mobile</th>
      <!-- <th>Image</th> -->
      <th>       Edit/Delete</th>
      
    </tr>
  </thead>
  <tbody>
    <!-- {{#each products}} -->
    <% for(let i=0;i<users.length;i++) { %> 
    <tr>
      <th scope="row"><%= i+1  %> </th>
      

      <td><%= users[i].name %> </td>
      <td><%= users[i].email %></td>
      <td><%= users[i].mobile %></td>
      
      <!-- <td><img style="width:50px;height:50px" src="" alt=""></td> -->
      <td>
        <% if(users[i].blockStatus) { %> 
        <form action="/admin_panel/user/unblock?id=<%= users[i]._id  %> " method="post">
        <button class="btn btn-primary" onclick="return  confirm('Are you sure want to unblock <%= users[i].name %>')">Unblock</button>
      </form>
      <% } else { %> 

        <form action="/admin_panel/user/block?id=<%= users[i].id  %> " method="post">
        <button class="btn btn-danger" onclick="return  confirm('Are you sure want to block <%= users[i].name %>')">Block</button>
      </form>
      <% } %> 

      </td>
    </tr>
    <% } %> 
    <!-- {{/each}} -->
     
  </tbody>
</table>
    
  </table>
</div>
</div>
</section>

