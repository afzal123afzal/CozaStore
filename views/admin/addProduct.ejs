<%- include('../layout/header.ejs') %> 
<%- include('../partials/admin-navbar.ejs') %> 

<% if(result) { %> 
<div class=" wrapper container">
    <div class="row">
<div class="center" style="display:flex; align-items:center; justify-content:center; margin-top: 15px;">
<h1>Update Product</h1>
</div>
<section>
    <div class="container">
<div class="row justify-content-center mt-5"> 
    <div class="col-4"> 
         
        <form action='/admin_panel/edit-product?id=<%= result._id %>' method="post" enctype="multipart/form-data"> 
  
            <div class="form-group"> 
                <label for="exampleInputName1">Product Name</label> 
                <input type="name" name="productName" class="form-control" id="name" value="<%= result.productName %> "> 
            </div> 
            <div class="form-group mt-3"> 
                <label for="exampleInputExpertise1">Actual Price</label> 
                <input type="price" name="actualPrice" class="form-control" id="price" value="<%= result.actualPrice %> "> 
            </div> 
            <div class="form-group mt-3"> 
                <label for="exampleInputExpertise1">Discounted Price</label> 
                <input type="price" name="discountedPrice" class="form-control" id="price" value="<%= result.discountedPrice %> "> 
            </div> 
            <div class="form-group mt-3"> 
                <label for="exampleInputDescription1">Description</label> 
                <input type="description" name="description" class="form-control" id="description" value="<%= result.description %> "> 
            </div> 
            <div class="form-group  mt-3"> 
                <label for="exampleInputFees1">Stock</label> 
                <input type="stock" name="stock" class="form-control" id="stock" value="<%= result.stock %> "> 
            </div> 
            <div class="form-group mt-3"> 
                <select class="form-select"  name="category" aria-label="Default select example"> 
                    <option selected><%= result.category %></option> 

                    <% for(let i=0;i<category.length;i++) {%> 
                        <option value="<%= category[i].category%> "> <%= category[i].category%> </option> 
                        <% } %> 
                        
                  </select> 
            </div> 
            <div class="form-group mt-3"> 
                <select class="form-select"name="subCategory" aria-label="Default select example"> 
                    <option selected><%= result.subCategory %></option> 
                    <option >S</option> 
                    <option >M</option> 
                    <option >L</option> 
                    <option >XL</option> 
                  </select> 
            </div> 
            <div class="row"> 
                <div class="mt-3"> 
                    <img src="/images/<%= result.image1%>" alt="" style="width:100px;height:100px">
                    <img src="/images/<%= result.image2%>" alt="" style="width:100px;height:100px">
                    <input type="file" class="form-control" name="image1" id="formFile" accept="image/*"> 
                </div> 
                <div class="mt-3"> 
                    <input type="file" class="form-control" name="image2" id="formFile" accept="image/*"> 
                </div> 
                <!-- <div class="col-2 mt-3"> 
                    <input type="submit" class="btn btn-warning" value="Upload Images"> 
                </div>  -->
                <button type="submit" class="btn btn-warning mt-3">Update Product</button> 
            </div> 
        </form> 
    </div> 
  </div>
</div>
</section>
</div>
</div>

        <% } else { %> 
            
            <div class=" wrapper container">
                <div class="row">
            <div class="center" style="display:flex; align-items:center; justify-content:center; margin-top: 15px;">
            <h1>Add Product</h1>
            </div>
<section>
    <div class="container">
<div class="row justify-content-center mt-5"> 
    <div class="col-4"> 
         
        <form action='/admin_panel/add-product' method="post" enctype="multipart/form-data"> 
  
            <div class="form-group"> 
                <label for="exampleInputName1">Product Name</label> 
                <input type="name" name="productName" class="form-control" id="name" > 
            </div> 
            <div class="form-group mt-3"> 
                <label for="exampleInputExpertise1">Actual Price</label> 
                <input type="price" name="actualPrice" class="form-control" id="price" > 
            </div> 
            <div class="form-group mt-3"> 
                <label for="exampleInputExpertise1">Discounted Price</label> 
                <input type="price" name="discountedPrice" class="form-control" id="price" > 
            </div> 
            <div class="form-group mt-3"> 
                <label for="exampleInputDescription1">Description</label> 
                <input type="description" name="description" class="form-control" id="description" > 
            </div> 
            <div class="form-group  mt-3"> 
                <label for="exampleInputFees1">Stock</label> 
                <input type="stock" name="stock" class="form-control" id="stock" > 
            </div> 
            <div class="form-group mt-3"> 
                <select class="form-select"  name="category" aria-label="Default select example"> 
                    
                    <option selected>Category</option> 
                    <% for(let i=0;i<category.length;i++) {%> 
                    <option > <%= category[i].category %> </option> 
                    <% } %> 
                    <!-- <option >Men</option> 
                    <option >Accessories</option>  -->
                  </select> 
            </div> 
            <div class="form-group mt-3"> 
                <select class="form-select"name="subCategory" aria-label="Default select example"> 
                    <option selected>SubCategory</option> 
                    <option >S</option> 
                    <option >M</option> 
                    <option >L</option> 
                    <option >XL</option> 
                  </select> 
            </div> 
            <div class="row"> 
                <div class="mt-3"> 
                    <input type="file" class="form-control" name="image1" id="formFile" accept="image/*"> 
                </div> 
                <div class="mt-3"> 
                    <input type="file" class="form-control" name="image2" id="formFile" accept="image/*"> 
                </div> 
                <!-- <div class="col-2 mt-3"> 
                    <input type="submit" class="btn btn-warning" value="Upload Images"> 
                </div>  -->
                <button type="submit" class="btn btn-warning mt-3">Add Product</button> 
            </div> 
        </form> 
    </div> 
  </div>
</div>
</section>
</div>
</div>
     
<% } %> 
 


